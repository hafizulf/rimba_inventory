<div class="container">
  <div class="row">
    <div class="col-md-8 mt-4">
      <div class="row">
        <div class="col-md-8">
          <h2>Daftar Customers</h2>
        </div>

        <div class="col-md">
          <a href="/customers/save" class="btn btn-primary float-right">
            Tambah Customer
          </a>
        </div>
      </div>

      <% if (msg.length > 0) { %>
      <div class="alert alert-success my-2" role="alert"><%= msg %></div>
      <% } %>

      <table class="table mt-2">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Nama</th>
            <th scope="col">Contact</th>
            <th scope="col">Email</th>
            <th scope="col">Alamat</th>
            <th scope="col">Diskon</th>
            <th scope="col">Tipe Diskon</th>
            <th scope="col">KTP</th>
          </tr>
        </thead>
        <tbody>
          <% if(customers.length < 1) { %>
          <tr>
            <td colspan="8">
              <div class="alert alert-danger fw-bold" role="alert">
                Tidak ada data customer
              </div>
            </td>
          </tr>
          <% } %> <% customers.forEach((customer, index) => { %>
          <tr>
            <th scope="row"><%= index+1 %></th>
            <td><%= customer.nama %></td>
            <td><%= customer.contact %></td>
            <td><%= customer.email %></td>
            <td><%= customer.alamat %></td>
            <td><%= customer.diskon %></td>
            <td><%= customer.tipe_diskon %></td>
            <td><%= customer.ktp %></td>
          </tr>

          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
